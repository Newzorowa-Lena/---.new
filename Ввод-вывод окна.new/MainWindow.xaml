<Window x:Class="FlightSimulatorWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Flight Simulator" Height="600" Width="800">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- Input Controls -->
        <GroupBox Grid.Column="0" Header="Flight Parameters" Margin="0,0,10,0">
            <StackPanel>
                <Label Content="Select Bird:" Margin="0,10,0,0"/>
                <ComboBox x:Name="birdComboBox" Margin="5" SelectedIndex="0">
                    <ComboBoxItem Content="the Blues (0.7 kg)"/>
                    <ComboBoxItem Content="Stella (1.0 kg)"/>
                    <ComboBoxItem Content="Red (1.5 kg)"/>
                </ComboBox>

                <Label Content="Launch Force (N):" Margin="0,10,0,0"/>
                <Slider x:Name="forceSlider" Minimum="1" Maximum="100" Value="50" Margin="5" 
                        TickFrequency="5" TickPlacement="BottomRight" IsSnapToTickEnabled="True"/>
                <TextBox x:Name="forceTextBox" Margin="5" Text="{Binding ElementName=forceSlider, Path=Value, StringFormat=N1}"/>

                <Label Content="Launch Angle (degrees):" Margin="0,10,0,0"/>
                <Slider x:Name="angleSlider" Minimum="1" Maximum="89" Value="45" Margin="5" 
                        TickFrequency="5" TickPlacement="BottomRight" IsSnapToTickEnabled="True"/>
                <TextBox x:Name="angleTextBox" Margin="5" Text="{Binding ElementName=angleSlider, Path=Value, StringFormat=N1}"/>

                <Label Content="Attack Method:" Margin="0,10,0,0"/>
                <StackPanel Margin="5">
                    <RadioButton x:Name="normalAttack" Content="Normal Hit" GroupName="AttackMethod" IsChecked="True"/>
                    <RadioButton x:Name="explosiveAttack" Content="Explosive Hit (1.5x damage)"/>
                    <RadioButton x:Name="acceleratedAttack" Content="Accelerated Hit (1.3x damage)"/>
                </StackPanel>

                <Button x:Name="simulateButton" Content="Simulate Flight" Margin="0,20,0,0" 
                        Height="30" FontWeight="Bold" Click="SimulateButton_Click"/>
            </StackPanel>
        </GroupBox>

        <!-- Output Area -->
        <GroupBox Grid.Column="1" Header="Simulation Results">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock x:Name="resultsText" Grid.Row="0" Margin="5" TextWrapping="Wrap"/>

                <TabControl Grid.Row="1" Margin="0,10,0,0">
                    <TabItem Header="Trajectory Data">
                        <DataGrid x:Name="trajectoryDataGrid" AutoGenerateColumns="True" 
                                  CanUserAddRows="False" IsReadOnly="True"/>
                    </TabItem>
                    <TabItem Header="Impact Results">
                        <DataGrid x:Name="impactDataGrid" AutoGenerateColumns="True" 
                                  CanUserAddRows="False" IsReadOnly="True"/>
                    </TabItem>
                </TabControl>

                <Button x:Name="exportButton" Grid.Row="2" Content="Export to CSV" 
                        Margin="5" Height="25" HorizontalAlignment="Right" 
                        Width="100" Click="ExportButton_Click"/>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
